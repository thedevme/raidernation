<div class="row">
    <div class="twelve columns">
    <h1>Listing games</h1>

<table>
  <tr>
    <th>Opponent</th>
    <th>Game date</th>
    <th>Game time</th>
    <th>Game status</th>
    <th>Game location</th>
    <th>Game result</th>
    <th>Game tv</th>
    <th>Game score</th>
    <th>Game link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.opponent %></td>
    <td><%= game.game_date %></td>
    <td><%= game.game_time %></td>
    <td><%= game.status %></td>
    <td><%= game.location %></td>
    <td><%= game.result %></td>
    <td><%= game.tv %></td>
    <td><%= game.home_score %></td>
    <td><%= game.away_score %></td>
    <td><%= game.raider_link %></td>
    
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Game', new_game_path %>
</div>

</div>