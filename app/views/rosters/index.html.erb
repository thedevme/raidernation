<h1>Listing rosters</h1>

<table>
  <tr>
    <th>Full name</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Jersey</th>
    <th>Roster position</th>
    <th>Height</th>
    <th>Weight</th>
    <th>Age</th>
    <th>Experience</th>
    <th>College</th>
    <th>Player image</th>
    <th>Player full image</th>
    <th>Latest news</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rosters.each do |roster| %>
  <tr>
    <td><%= roster.full_name %></td>
    <td><%= roster.first_name %></td>
    <td><%= roster.last_name %></td>
    <td><%= roster.jersey %></td>
    <td><%= roster.roster_position %></td>
    <td><%= roster.height %></td>
    <td><%= roster.weight %></td>
    <td><%= roster.age %></td>
    <td><%= roster.experience %></td>
    <td><%= roster.college %></td>
    <td><%= roster.player_image %></td>
    <td><%= roster.player_full_image %></td>
    <td><%= roster.latest_news %></td>
    <td><%= link_to 'Show', roster %></td>
    <td><%= link_to 'Edit', edit_roster_path(roster) %></td>
    <td><%= link_to 'Destroy', roster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

