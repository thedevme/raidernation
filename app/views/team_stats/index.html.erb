<h1>Listing team_stats</h1>

<table>
  <tr>
    <th>Ppg avg</th>
    <th>Ppg rank</th>
    <th>Ypg avg</th>
    <th>Ypg rank</th>
    <th>Passing ypg avg</th>
    <th>Passing ypg rank</th>
    <th>Rushing ypg avg</th>
    <th>Rushing ypg rank</th>
    <th>Pts apg avg</th>
    <th>Pts apg rank</th>
    <th>Yds apg avg</th>
    <th>Yds apg rank</th>
    <th>Pass yds apg avg</th>
    <th>Pass yds apg rank</th>
    <th>Rush yds apg avg</th>
    <th>Rush yds apg rank</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @team_stats.each do |team_stat| %>
  <tr>
    <td><%= team_stat.ppg_avg %></td>
    <td><%= team_stat.ppg_rank %></td>
    <td><%= team_stat.ypg_avg %></td>
    <td><%= team_stat.ypg_rank %></td>
    <td><%= team_stat.passing_ypg_avg %></td>
    <td><%= team_stat.passing_ypg_rank %></td>
    <td><%= team_stat.rushing_ypg_avg %></td>
    <td><%= team_stat.rushing_ypg_rank %></td>
    <td><%= team_stat.pts_apg_avg %></td>
    <td><%= team_stat.pts_apg_rank %></td>
    <td><%= team_stat.yds_apg_avg %></td>
    <td><%= team_stat.yds_apg_rank %></td>
    <td><%= team_stat.pass_yds_apg_avg %></td>
    <td><%= team_stat.pass_yds_apg_rank %></td>
    <td><%= team_stat.rush_yds_apg_avg %></td>
    <td><%= team_stat.rush_yds_apg_rank %></td>
    <td><%= link_to 'Show', team_stat %></td>
    <td><%= link_to 'Edit', edit_team_stat_path(team_stat) %></td>
    <td><%= link_to 'Destroy', team_stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

