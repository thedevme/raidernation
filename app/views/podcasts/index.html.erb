<h1>Listing podcasts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Link</th>
    <th>Duration</th>
    <th>Description</th>
    <th>Pubdate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @podcasts.each do |podcast| %>
  <tr>
    <td><%= podcast.title %></td>
    <td><%= podcast.author %></td>
    <td><%= podcast.link %></td>
    <td><%= podcast.duration %></td>
    <td><%= podcast.description %></td>
    <td><%= podcast.pubDate %></td>
    <td><%= link_to 'Show', podcast %></td>
    <td><%= link_to 'Edit', edit_podcast_path(podcast) %></td>
    <td><%= link_to 'Destroy', podcast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

