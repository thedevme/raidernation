<h1>Listing players</h1>

<table>
  <tr>
    <th>Player Image</th>
    <th>Name</th>
    <th>No.</th>
    <th>Pos</th>
    <th>Ht.</th>
    <th>Wt.</th>
    <th>Age</th>
    <th>Exp</th>
    <th>College</th>
    <th>Player stat type</th>
    <th></th>
    <th></th>
    <th>Last name</th>
    <th>First name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= link_to image_tag(player.image, alt:"Image") %></td>
    <td><%= player.name %></td>
    <td><%= player.no %></td>
    <td><%= player.pos %></td>
    <td><%= player.height %></td>
    <td><%= player.weight %></td>
    <td><%= player.age %></td>
    <td><%= player.exp %></td>
    <td><%= player.college %></td>
    <td><%= player.nickname %> </td>
    <td><%= player.last_update %> </td>
    <td>
      <% player.positions.each do |pos| %>
          <p><%=pos.player_position %></p>
      <% end %>
    </td>
    <td><%= player.last_name %></td>
    <td><%= player.first_name %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

